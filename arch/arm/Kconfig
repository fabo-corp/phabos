menu "System configuration"

config CPU_ARM
    bool
    default y

config CPU_ARMV7
    bool
    select CPU_ARM

config CPU_ARM_THUMB
    bool

config CPU_ARMV7M
    bool
    select CPU_ARMV7
    select CPU_ARM_THUMB

config CPU_ARM_CORTEX_M3
    bool
    select CPU_ARMV7M

config CPU_ARM_CORTEX_M4
    bool
    select CPU_ARMV7M

config BIG_ENDIAN
    bool

config LITTLE_ENDIAN
    bool

choice
    prompt "Machine"

    config MACH_TSB
        bool "Toshiba Bridge"

    config MACH_STELLARIS
        bool "TI Stellaris"

    config MACH_STM32
        bool "STM32"
endchoice

if MACH_TSB
source "arch/$ARCH/mach-tsb/Kconfig"
endif

if MACH_STELLARIS
source "arch/$ARCH/mach-stellaris/Kconfig"
endif

if MACH_STM32
source "arch/$ARCH/mach-stm32/Kconfig"
endif

config ARCH_HAS_SCHEDULER_WATCHDOG
    bool
    default y

choice
    prompt "Boot Mode"

    config BOOT_FLASH
        bool "boot from flash"

    config BOOT_COPYTORAM
        bool "boot from flash then copy to ram"

    config BOOT_RAM
        bool "boot from ram"
endchoice

if CPU_ARMV7M
source "arch/$ARCH/arm-v7m/Kconfig"
endif

source "arch/$ARCH/common/Kconfig"

endmenu
