#include <asm/linker-utils.h>

SECTIONS
{
    .data : {
        _shell_command = .;
        KEEP(*(.shell_cmd))
        _eshell_command = .;
    } DATA_STORAGE

    .syscall : {
        _syscall = .;
        KEEP(*(.syscall))
        _esyscall = .;

        _driver = .;
        KEEP(*(.driver))
        _edriver = .;
    } DATA_STORAGE

    .heap : {
        _sheap = .;
    } > SRAM
}
